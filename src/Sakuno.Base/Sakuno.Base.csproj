<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <OutputType>Library</OutputType>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <LangVersion>7.3</LangVersion>
    <RootNamespace>Sakuno</RootNamespace>
    <AssemblyName>Sakuno.Base</AssemblyName>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <OutputPath>$(SolutionDir)artifacts\$(Configuration)\</OutputPath>
    <PackageId>Sakuno.Base</PackageId>
    <Version>0.3.2</Version>
    <Authors>Kodama Sakuno</Authors>
    <Description>The common part of Sakuno's libraries</Description>
    <Product>Sakuno.Base</Product>
    <Company>Kodama Sakuno</Company>
    <Copyright>Copyright Â© 2017 Kodama Sakuno</Copyright>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageLicenseUrl>https://github.com/KodamaSakuno/Sakuno.Base/blob/master/LICENSE.md</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/KodamaSakuno/Sakuno.Base</PackageProjectUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Fody" Version="3.1.4">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>
